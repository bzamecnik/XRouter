<UserControl x:Class="XRouter.Gui.ConfigurationControls.Messageflow.TargetNodeSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid HorizontalAlignment="Left" VerticalAlignment="Center">
        <ToggleButton Name="uiSelect" Click="uiSelect_Click" MouseEnter="uiSelect_MouseEnter" MouseLeave="uiSelect_MouseLeave">
            <StackPanel Orientation="Horizontal">
                <TextBlock FontSize="12" FontWeight="Bold" VerticalAlignment="Center" Margin="4, 0, 0, 0">Select</TextBlock>
                <Image Source="/XRouter.Gui;component/Resources/link-go-icon.png" Height="20" Margin="4, -2, 5, -2" />
            </StackPanel>
        </ToggleButton>
    </Grid>
</UserControl>
