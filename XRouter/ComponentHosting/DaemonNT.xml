<?xml version="1.0" encoding="utf-8" ?>
<config>
  <service type="XRouter.ComponentHosting.XRouterService,XRouter.ComponentHosting.dll" name="xrouter">
    <settings>
      <section name="broker">
        <param name="connection-string"></param>
      </section>
      <section  name="gateway">
        <param name="component-name">gateway1</param>
      </section>
      <section name="processor">
        <param name="component-name">processor1</param>
      </section>
    </settings>
  </service>
  <service type="XRouter.Manager.XRouterManagerService,XRouter.Manager.dll" name="xroutermanager">
    <settings>
      <section name="email">
        <param name="smtphost">localhost</param>
        <param name="smtpport">25</param>
        <param name="from">xrouter-manager@localhost</param>
        <param name="to">xrouter-admin@localhost</param>
      </section>
      <section name="storages">
        <param name="connectionstring">mssqlserverconnectionstring</param>
        <param name="logs">Logs</param>
      </section>
      <section name="watcher">
        <param name="throwup">True</param>
      </section>
      <section name="console">
        <param name="uri">http://localhost:9090/XRouter.ConsoleService</param>
        <param name="metadatauri">http://localhost:9090/XRouter.ConsoleService.Metadata</param>
      </section>
      <section name="reporter">
        <param name="time">01:00:00</param>
      </section>
      <param name="xrouterservice">xrouter</param>
    </settings>
  </service>
</config>
